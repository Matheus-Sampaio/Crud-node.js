<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CRUD em NodeJs</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>

<h2>Registros</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>Email</td>
                <td>Email Confirmado</td>
                <td>Senha</td>
                <td>Senha Confirmada</td>
                <td>CPF</td>
                <td>Telefone</td>
                <td>Sexo</td>
                <td>Nascimento</td>
            </tr>
        </thead>
        <tbody>
        <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.surname %></td>
                <td><%= details.email %></td>
                <td><%= details.confirmemail %></td>
                <td><%= details.password %></td>
                <td><%= details.confirmpassword %></td>
                <td><%= details.CPF %></td>
                <td><%= details.telephone %></td>
                <td><%= details.gender %></td>
                <td><%= details.birthdate %></td>
                <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <button class="btn btn-primary" type="submit" onclick="window.location='/';">Novo</button>
</body>
</html>