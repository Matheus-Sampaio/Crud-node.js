<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CRUD em NodeJs</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
 
<h2>Editar Registro</h2>
  <% data.forEach((details) => { %>
    <form action="/edit/<%= details._id %>" method="POST">

      <div class="form-group form-row">
        <div class="col-4">
          <label for="name">Nome: </label>
          <input type="text" class="form-control" placeholder="Nome" value="<%= details.name %>" name="name">
        </div>
        <div class="col-4">
          <label for="surname">Sobrenome: </label>
          <input type="text" class="form-control" placeholder="Sobrenome" value="<%= details.surname %>" name="surname">
        </div>
      </div>
    </div>

    <div class="form-group form-row">
        <div class="col-4">
          <label for="email">Email: </label>
          <input type="email"  class="form-control" value="<%= details.email %>" id="email" name="email">
        </div>
        <div class="col-4">
          <label for="confirmemail">Email Confirmado: </label>
          <input type="email" class="form-control" value="<%= details.confirmemail %>" placeholder="yourmail@host.com" name="confirmemail">
        </div>
    </div>
      
      <div class="form-group form-row">
        <div class="col-4">
          <label for="password">Senha: </label>
          <input type="password" class="form-control" value="<%= details.password %>" name="password">
        </div>
        <div class="col-4">
            <label for="confirmpassword">Senha Confirmada: </label>
            <input type="password" class="form-control" value="<%= details.confirmpassword %>" name="confirmpassword">
          </div>
      </div>

      <div class="form-group form-row">
        <div class="col-4">
            <label for="CPF">CPF:</label>
            <input type="text" class="form-control" value="<%= details.CPF %>" name="CPF">
        </div>
          <div class="col-4">
            <label for="telephone">Telefone: </label>
            <input type="text" class="form-control" value="<%= details.telephone %>" placeholder="(xx)xxxxx-xxxx" name="telephone">
          </div>
        </div>
        

        <div class="form-row">
            <div class="col-2">
                <label for="gender">Sexo: </label>
                <select id="gender" name="gender" class="form-control" value="<%= details.gender %>">
                  <option value="male">Masculino</option>
                  <option value="female">Feminino</option>
                </select>
            </div>
      </div>
      <div class=" form group form-row">
        <div class="col-2">
            <label for="birthdate">Data de Nascimento: </label>
            <input type="date" class="form-control" value="<%= details.birthdate %>"  name="birthdate">
          </div>
      </div>

      <button class="btn btn-primary" onclick="window.location='/show';">Todos</button>
      <button type="submit" class="btn btn-primary">Editar</button>
    </form>
  <% }) %>
 
</body>
</html>
